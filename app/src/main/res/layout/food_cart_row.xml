<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:gravity="center_horizontal"
    android:paddingTop="2dp"
    android:paddingBottom="10dp"
    android:onClick="changeActivity">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#FFF9F9F9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            >

            <ImageView
                android:id="@+id/foodCartImg"
                android:src="@drawable/whale"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:id="@+id/foodCartName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="18sp"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:layout_toEndOf="@+id/foodCartImg"/>

            <TextView
                android:id="@+id/foodCartXst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cross Street"
                android:layout_below="@+id/foodCartName"
                android:layout_toEndOf="@+id/foodCartImg"
                />

        </RelativeLayout>

