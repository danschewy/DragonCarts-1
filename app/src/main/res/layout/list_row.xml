<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:padding="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/listItemNoteImg"
        android:src="@drawable/whale"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Note Title"
        android:id="@+id/listItemNoteTitle"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listItemNoteImg"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="So this is hwo our note text should look, it's not pretty but I think it should do"
        android:id="@+id/noteText"
        android:layout_below="@+id/listItemNoteTitle"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/listItemNoteImg"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:singleLine="true" />

</RelativeLayout>
